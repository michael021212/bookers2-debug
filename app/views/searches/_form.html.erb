<% if user_signed_in? %>
    <%= form_tag(search_path, method: :get) do %>
      <div style="padding-top: 0.4rem;">
        <%= text_field_tag 'content' %>
        <%= select_tag 'model', options_for_select({ "User" => "user", "Book" => "book", "Category" => "category" }) %>
        <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
        <%= submit_tag '検索' %>
      </div>
    <% end %>
<% end %>
